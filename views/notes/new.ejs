<%- include("./../partials/head") %>
<link rel="stylesheet" href="/css/blog.css">
<%- include("./../partials/Navbar") %>
<body>
  <div class="container">
  <div class="narticle col-sm-8">
  <form action="/notes/new" method="POST" novalidate class="validated-form" >
    <!-- enctype="multipart/form-data" -->
    <!-- Form Starts here -->
            <div class="form-label">
              <label for="title">Title</label>
              <input
                type="text"
                name="note[title]"
                id="title"
                class="form-control"
              />            
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="subject">Subject</label>
              <input name="note[subject]" id="subject" class="form-control"></input>
              <div class="valid-feedback">
                  Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="semester">Semester</label>
              <select class="form-select" name="note[semester]" id="semester">
                    <% for(let semester of semesters){ %>
                    <option value="<%=semester%>"%>><%=semester%></option>
                    <% } %>
              </select>
              <div class="valid-feedback">
                  Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="course">Course</label>
              <select class="form-select" name="note[course]" id="course">
                    <% for(let course of courses){ %>
                      <option value="<%=course%>"%>><%=course%></option>
                    <% } %>
              </select>
              <div class="valid-feedback">
                  Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="year">Year</label>
              <select class="form-select" name="note[year]" id="year">
                    <% for(let year of years){ %>
                    <option value="<%=year%>"%>><%=year%></option>
                    <% } %>
              </select>
              <div class="valid-feedback">
                  Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="branch">Branch</label>
              <select class="form-select" name="note[branch]" id="branch">
                    <% for(let branch of branches){ %>
                    <option value="<%=branch%>"%>><%=branch%></option>
                    <% } %>
              </select>
              <div class="valid-feedback">
                  Looks good!
              </div>
            </div>
            <br />
            <div class="form-label">
              <label for="upload">Add link to Notes:</label>
              <input type="url" name="note[url]" id="upload" value="<%=note.url%>"/>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <br />
            <a href="/notes" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
    <!-- Form Ends Here! -->
  </form>
</div>
</div>
</body>
<script src="/js/validateForms.js"></script>
</html>