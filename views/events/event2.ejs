<body class="Evepg">
  <div class="main">
    <h1 class="eventTitle">Event Will Start In</h1>
    <div id="countdown" class="countdown">
      <div class="time">
        <h2 id="days"></h2>
        <small>Days</small>
      </div>
      <div class="time">
        <h2 id="hours"></h2>
        <small>Hours</small>
      </div>
      <div class="time">
        <h2 id="minutes"></h2>
        <small>Minutes</small>
      </div>
      <div class="time">
        <h2 id="seconds"></h2>
        <small>Seconds</small>
      </div>
    </div>
  </div>
  <div class="eve1">
    <img class="eve1img" src="/Images/CSI.png" alt=".." />
    <div class="evedetails">
      <h2 style="text-align: center">REACTJs & MATERIAL-UI</h2>
      Time - 11 am to 1 pm
      <br />
      <br />
      Venue - Offline <br />
      <br />
      Description - This Workshop will teach you How to create a Single Page
      Application using Javascript Library without the hassle of writing
      multiple lines of Html & Css <br />
      <br />
      Co-ordinators - NA
    </div>
  </div>
  <script>
    const days = document.getElementById("days");
    const hours = document.getElementById("hours");
    const minutes = document.getElementById(`minutes`);
    const seconds = document.getElementById("seconds");

    const evetime = new Date(``);

    function updateCountdown() {
      const currentTime = new Date();
      const diff = evetime - currentTime;

      const d = Math.floor(diff / 1000 / 60 / 60 / 24);
      const h = Math.floor(diff / 1000 / 60 / 60) % 24;
      const m = Math.floor(diff / 1000 / 60) % 60;
      const s = Math.floor(diff / 1000) % 60;

      days.innerHTML = d;
      hours.innerHTML = h < 10 ? "0" + h : h;
      minutes.innerHTML = m < 10 ? "0" + m : m;
      seconds.innerHTML = s < 10 ? "0" + s : s;
    }

    setInterval(updateCountdown, 1000);
  </script>
</body>
