<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/editProfile.css">
<div class="container">
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <nav class="nav nav-borders">
            <h1>User</h1>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <form action="/update/<%=user.id%>?_method=PUT" method="POST">
                            <!-- Form Group (username)-->
                            <div class="mb-3  form-group">
                                <label class="small mb-1" for="name">Username (how your name will appear to other users on the site)</label>
                                <input class="form-control" id="name" name="user[name]" type="text" placeholder="Enter your username" value="<%=user.name%>">
                            </div>
                            <!-- Form Row -->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (organization name)-->
                                <div class="col-md-6  form-group">
                                    <label class="small mb-1" for="organization">Organization name</label>
                                    <input class="form-control" id="organization" name="user[organization]" type="text" placeholder="Enter your organization name" value="<%=user.organization%>">
                                </div>
                                <!-- Form Group (location)-->
                                <div class="col-md-6  form-group">
                                    <label class="small mb-1" for="inputLocation">Location</label>
                                    <input class="form-control" id="inputLocation" name="user[location]" type="text" placeholder="Enter your location" value="<%=user.location%>" >
                                </div>
                            </div>
                            <!-- Form Group (email address)-->
                            <div class="mb-3  form-group">
                                <label class="small mb-1" for="email">Email address</label>
                                <input class="form-control" name="user[email]" id="email" type="email" placeholder="Enter your email address" value="<%=user.email%>">
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (phone number)-->
                                <div class="col-md-6  form-group">
                                    <label class="small mb-1" for="phone">Phone number</label>
                                    <input class="form-control" name="user[phone]" id="phone" type="text" placeholder="Enter your phone number" value="<%=user.number%>">
                                </div>
                                <!-- Form Group (birthday)-->
                                <div class="col-md-6 form-group">                
                                                    <label class="small mb-1" for="birthday">Date of Birth</label>
                                                    <input type='date' class="form-control input-group date" name="user[birthday]" value="<%-user.birthday%>"/>
                                                    <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                            <script type="date/javascript">
                                                $(function () {
                                                    $('#birthday').datetimepicker();
                                                });
                                            </script>   
                                </div>
                            </div>
                            <!-- Save changes button-->
                            <button class="btn btn-primary">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>   