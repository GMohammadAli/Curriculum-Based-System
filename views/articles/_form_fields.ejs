<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<br />
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control" cols="10">
<%= article.description %></textarea
  >
</div>
<br />
<div class="form-group">
  <label for="markdown">Author Name</label>
  <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
  >
</div>
<br />
<a href="/articles" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
